<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/consstraint_layout_ourteam"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_ourteam"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/our_team"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="40sp"
                android:background="@drawable/gradientbackground"
                app:fontFamily="monospace"/>

            <ScrollView
                android:layout_marginTop="70dp"
                android:id="@+id/scroller_ourteam"
                android:layout_width="match_parent"
                android:background="@drawable/gradientbackground"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/mntcmember_linear"
                    android:layout_width="match_parent"
                    android:background="@drawable/our_team_card"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mntcmember_image"
                        android:layout_width="130dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="130dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_margin="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/mntcmember_name"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="wersfg"/>

                        <TextView
                            android:id="@+id/mntcmember_post"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="asdsdfsgbfsb"/>

                        <TextView
                            android:id="@+id/mntcmember_contact"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="ergerthbgfdn"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/bgBottomNavigation"
        android:foreground="?attr/selectableItemBackground"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/navigation" />

</android.support.design.widget.CoordinatorLayout>
